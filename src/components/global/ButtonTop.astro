---
import { ViewTransitions } from "astro:transitions";
---

<header class="flex justify-between">
    <ViewTransitions />
    <section
        class="mx-auto 2xl:max-w-7xl justify-between lg:fixed lg:z-50 w-full"
    >
        <div class="mx-auto bg-black justify-center w-full">
            <div
                class="mx-auto border-x max-w-7xl items-center flex flex-col lg:flex-row lg:items-center lg:justify-between w-full"
            >
                <button
                    class="items-center bg-white fixed z-auto"
                    type="button"
                    disabled=""
                    aria-label="Inicio"
                    aria-controls="splide01-track"
                >
                    <a href="#">
                        <svg
                            xmlns="http://www.w3.org/2000/svg"
                            viewBox="0 0 40 40"
                            width="40"
                            height="40"
                            focusable="false"
                            ><path
                                d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"
                            ></path>
                        </svg>
                    </a>
                </button>
            </div>
        </div>
    </section>
</header>
