---
const ILLUSTRATIONS = [
    {
        title: "#PORTFOLIO WEB",
        description: "...",
        link: "https://www.instagram.com/p/CwXsPXgrncZ/?hl=es-la",
        img: "/resources/img-illustration/b.webp",
    },
    {
        title: "#DTIYS MechiBaz 2023",
        description: "Draw this in your Style para @mechibaz - Instagram",
        link: "https://www.instagram.com/p/CtS3TSaMmV1/?hl=es-la",
        img: "/resources/img-illustration/a.webp",
    },
    {
        title: "#SCC",
        description: "...",
        link: "https://www.instagram.com/p/CnDL_V6pSyj/?hl=es-la",
        img: "/resources/img-illustration/c.webp",
    },
];
---

<section
    id="illustrations"
    class="border-b border-white/20 bg-accent-500 pb-10"
>
    <div
        class="mx-auto max-w-7xl border-white/20 border-x"
        x-data=`{ init() {
              new Splide(this.$refs.splide, {
  
                  perPage: 3,
                  gap: '0rem',
                  breakpoints: {
                      640: {
                          perPage: 1,
                      },
                  },
  
              }).mount()
          },
      }`
    >
        <section id="illustration">
            <div
                class="text-white order-first p-8 text-center border-b border-white/20"
            >
                <span class="block font-display text-xl"> ILUSTRACIONES</span>
            </div>
        </section>
        <section
            class="splide is-initialized splide--slide splide--ltr splide--draggable is-active"
            aria-label="Splide/Alpine.js"
            x-ref="splide"
            id="splide01"
            aria-roledescription="carousel"
        >
            <div class="splide__arrows splide__arrows--ltr items-center">
                <button
                    class="splide__arrow splide__arrow--prev bg-white"
                    type="button"
                    aria-label="Previous slide"
                    aria-controls="splide01-track"
                    ><svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 40 40"
                        width="40"
                        height="40"
                        focusable="false"
                        ><path
                            d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"
                        ></path></svg
                    ></button
                >
                <button
                    class="splide__arrow splide__arrow--next bg-white"
                    type="button"
                    disabled=""
                    aria-label="Next slide"
                    aria-controls="splide01-track"
                    ><svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 40 40"
                        width="40"
                        height="40"
                        focusable="false"
                        ><path
                            d="m15.5 0.932-4.3 4.38 14.5 14.6-14.5 14.5 4.3 4.4 14.6-14.6 4.4-4.3-4.4-4.4-14.6-14.6z"
                        ></path></svg
                    ></button
                >
            </div>
            <div
                class="h-full splide__track splide__track--slide splide__track--ltr splide__track--draggable"
                id="splide01-track"
                style="padding-left: 0px; padding-right: 0px;"
                aria-live="polite"
                aria-atomic="true"
                aria-busy="false"
            >
                <ul
                    class="splide__list"
                    id="splide01-list"
                    role="presentation"
                    style="transform: translateX(-2040px);"
                >
                    <!-- PRUEBA DE RECORRER-->
                    {
                        ILLUSTRATIONS.map((illustration) => (
                            <li
                                class="flex justify-center flex-col splide__slide is-prev"
                                id="splide01-slide03"
                                role="tabpanel"
                                aria-roledescription="slide"
                                aria-label="3 of 4"
                                style="margin-right: 0.5rem; width: calc(((100% + 0.5rem) / 1) - 0.5rem);"
                                aria-hidden="true"
                            >
                                <img
                                    alt="work"
                                    class="w-full object-cover object-center bg-white border-t border-black border-r"
                                    src={illustration.img}
                                />
                                <div class="text-white text-xs order-first p-3 text-center border-r border-white/20">
                                    <span class="block  font-extrabold">
                                        {illustration.title}
                                    </span>
                                </div>
                                <div class="text-gray-100 text-xs order-first flex p-2 justify-around border-r border-white/20">
                                    <a
                                        class="block hover:text-carrot" target="_blank"
                                        href={illustration.link}
                                    >
                                        <svg
                                            xmlns="http://www.w3.org/2000/svg"
                                            viewBox="0 0 20 20"
                                            fill="currentColor"
                                            class="w-5 h-5"
                                        >
                                            <path
                                                fill-rule="evenodd"
                                                d="M4.25 5.5a.75.75 0 0 0-.75.75v8.5c0 .414.336.75.75.75h8.5a.75.75 0 0 0 .75-.75v-4a.75.75 0 0 1 1.5 0v4A2.25 2.25 0 0 1 12.75 17h-8.5A2.25 2.25 0 0 1 2 14.75v-8.5A2.25 2.25 0 0 1 4.25 4h5a.75.75 0 0 1 0 1.5h-5Z"
                                                clip-rule="evenodd"
                                            />
                                            <path
                                                fill-rule="evenodd"
                                                d="M6.194 12.753a.75.75 0 0 0 1.06.053L16.5 4.44v2.81a.75.75 0 0 0 1.5 0v-4.5a.75.75 0 0 0-.75-.75h-4.5a.75.75 0 0 0 0 1.5h2.553l-9.056 8.194a.75.75 0 0 0-.053 1.06Z"
                                                clip-rule="evenodd"
                                            />
                                        </svg>
                                    </a>
                                </div>
                            </li>
                        ))
                    }
                    <!-- -->
                </ul>
            </div>
        </section>
    </div>
</section>
